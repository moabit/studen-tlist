{% if students is not empty %}
    {% if pager.search is not null %}
        <div class="text-center m-4">
            <h4 class="text-muted">Результат поиска по запросу <span class="font-italic">{{ pager.search|e }} </span>
            </h4>
            <a href="/"> Отобразить всех студентов</a></div>
    {% elseif notify=='registered' %}
        <h4 class="text-success text-center m-4">Вы успешно зарегистрировались</h4>
    {% elseif notify=='edited' %}
        <h4 class="text-success text-center m-4 ">Вы успешно отредактировали свой профиль</h4>
    {% else %}
        <h4 class="text-center m-4 text-muted">Список абитуриентов</h4>
    {% endif %}
{% else %}
    <h4 class="text-center m-4 text-muted">По вашему запросу ничего не найдено</h4>
{% endif %}
{% include 'studentTable.twig' %}